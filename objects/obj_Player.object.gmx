}

if(stepCounter &gt; 0)
{
    stepCounter--;
}
else
{
    stepCounter = 20;
    canFire = true;
}

if(shootLeft &amp;&amp; canFire)
{
    canFire = false;
    draw_text(x, y - 100, "Charging!");
    
    if(charge &gt;= 0)
    {
        charge++;
        if(charge &gt; 3)
        {
            draw_text(x, y - 100, "Charged!!");
            charge = 3;
        }
    }
}
else if(keyboard_check_released(vk_left) &amp;&amp; charge == 3)
{   
    bullet = instance_create(x, y - 25, obj_LargeBullet)
    bullet.damage = charge;
    bullet.speed = 10;
    if(sign(image_xscale == 1)) bullet.direction = 0;
    if(sign(image_xscale == -1)) bullet.direction = 180;
    bullet.image_xscale *= sign(image_xscale);
    charge = 0;
}
else if(keyboard_check_pressed(vk_right) &amp;&amp; canFire)
{   
    canFire = false;
    isFiring = true;
    bullet = instance_create(x, y - 25, obj_Bullet);
    bullet.speed = 25;
    if(sign(image_xscale == 1)) bullet.direction = 0;
    if(sign(image_xscale == -1)) bullet.direction = 180;
}
